{
  "app": {
    "title": "BAC-IS",
    "description": "Bids and Awards Committee - Information System",
    "port": "9196",
    "url": "http://localhost:9196",
    "api": "https://beta.gsc.edu.ph/wp-json/wp/v2",
    "bacPage": "https://beta.gsc.edu.ph/bids-and-awards-committee",
    "dir": "${APP_DIR}",
    "dirs": {
      "data": "${APP_DIR}/data",
      "src": "${APP_DIR}/src",
      "public": "${APP_DIR}/data/public",
      "view": "${APP_DIR}/data/view",
      "upload": "${APP_DIR}/data/upload",
      "credentials": "${APP_DIR}/credentials"
    }
  },
  "express": {
    "trustProxy": false
  },
  "nunjucks": {
    "loader": {
      "watch": true,
      "noCache": true
    },
    "environment": {
      "autoescape": true,
      "throwOnUndefined": false,
      "trimBlocks": false,
      "lstripBlocks": false
    }
  },
  "session": {
    "name": "bacis_app_sid",
    "store": {
      "db": "sessions.db",
      "dir": "${APP_DIR}/data"
    },
    "cookie": {
      "httpOnly": false,
      "maxAge": 2592000,
      "secure": false
    }
  },
  "recaptchav3": {
    "enable": true
  },
  "loginDelay": 0,
  "bac": {
    "catId": 2
  },
  "deleteWindow": {
    "unit": "hours",
    "value": 24
  }
}